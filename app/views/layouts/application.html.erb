<!DOCTYPE html>
<html>
  <head>
    <title>Quizlet</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if notice %>
      <div class="bg-flash">
        <%= notice %>
      </div>
    <% elsif alert %>
    <div class="bg-flash">
      <%= alert %>
    </div>
    <% end %>
    <header class="bg-primary">
      <span>Quizlet</span>
      <span>検索する</span>
      <%= link_to "作成する" ,  new_subject_path  %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
    </header>
    <%= yield %>
  </body>
</html>
